#include <stdio.h>
#include <unistd.h>
#include <sys/shm.h>
#include <sys/ipc.h>
#include <sys/wait.h>
#include <stdlib.h>

int main()
{
    int shmid, i;
    char *shmptr;

    // Create shared memory
    shmid = shmget(2041, 32, 0666 | IPC_CREAT);
    if (shmid < 0) {
        perror("shmget failed");
        exit(1);
    }

    pid_t child = fork();

    if (child < 0) {
        perror("fork failed");
        exit(1);
    }

    // Parent Process
    if (child > 0) {

        shmptr = (char *)shmat(shmid, NULL, 0);
        if (shmptr == (char *)-1) {
            perror("shmat failed");
            exit(1);
        }

        printf("\nPARENT PROCESS WRITING:\n");

        for (i = 0; i < 10; i++) {
            shmptr[i] = 'a' + i;
            putchar(shmptr[i]);
        }

        shmptr[10] = '\0';   // Null terminate string

        printf("\n\nString in shared memory: %s\n", shmptr);

        wait(NULL);   // Wait for child to read

        shmdt(shmptr);  // Detach
        shmctl(shmid, IPC_RMID, NULL);  // Remove shared memory
    }

    // Child Process
    else {

        shmptr = (char *)shmat(shmid, NULL, 0);
        if (shmptr == (char *)-1) {
            perror("shmat failed");
            exit(1);
        }

        printf("\nCHILD PROCESS READING:\n");

        for (i = 0; i < 10; i++)
            putchar(shmptr[i]);

        printf("\n");

        shmdt(shmptr);  // Detach
    }

    return 0;
}
